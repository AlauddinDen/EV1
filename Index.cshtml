@model IEnumerable<EV3.Models.Student>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
@await Component.InvokeAsync("HeadCount")
<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.StudentN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnrolled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imgurl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseN)
            </th>
            <th>@Html.DisplayNameFor(model => model.CourseModules)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.StudentN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEnrolled)
                </td>
                <td>
                    <img src="@Url.Content("~/Images/"+item.Imgurl)" alt="Alternate Text" width="80" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseN)
                </td>
                <td>
                    <ul>
                        @foreach (var m in item.CourseModules)
                        {
                            <li> @m.ModuleN - @m.Duration hour</li>
                        }
                    </ul>

                </td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = item.StudentId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Students", new { id = item.StudentId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

