@model List<EV3.Models. CourseModule>
<table id="ExpTab" class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Module Name</th>
            <th>Duration</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" name="CourseModules[@i].ModuleN" value="@Model[i].ModuleN" />
                </td>
                <td>
                    <input type="number" name="CourseModules[@i].Duration" value="@Model[i].Duration" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="DeleteItem(this)">Remove</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="hidden" id="hdnIndex" value="@Model.Count" />
